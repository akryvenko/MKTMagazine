<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="/product" class="com.mariya.action.ProductAction">
        <property name="productDAO" ref="productDAO"/>
    </bean>

    <bean name="/product/new" class="com.mariya.action.NewProductAction">
        <property name="productDAO" ref="productDAO"/>
    </bean>

    <bean name="/product/save" class="com.mariya.action.SaveProductAction">
        <property name="productDAO" ref="productDAO"/>
    </bean>

    <bean name="/product/edit" class="com.mariya.action.EditProductAction">
        <property name="productDAO" ref="productDAO"/>
    </bean>

    <bean name="/customer/product" class="com.mariya.action.ProductAction">
        <property name="productDAO" ref="productDAO"/>
    </bean>

    <bean name="/customer" class="com.mariya.action.CustomerAction">
        <property name="employerDAO" ref="employerDAO"/>
        <property name="customerDAO" ref="customerDAO"/>
    </bean>

    <bean name="/registerCustomer" class="com.mariya.action.RegisterCustomerAction">
        <property name="customerDAO" ref="customerDAO"/>
        <property name="officeDAO" ref="officeDAO"/>
        <property name="employerDAO" ref="employerDAO"/>
    </bean>

    <bean name="/customerSignup" class="com.mariya.action.CustomerSingUpAction"/>


    <bean name="/customer/employee/list" class="com.mariya.action.ListEmployeeAction">
        <property name="employerDAO" ref="employerDAO"/>
    </bean>

    <bean name="/customer/employee/new" class="com.mariya.action.NewEmployeeAction">
        <property name="employerDAO" ref="employerDAO"/>
        <property name="officeDAO" ref="officeDAO"/>
    </bean>

    <bean name="/customer/employee/edit" class="com.mariya.action.EditEmployeeAction">
        <property name="employerDAO" ref="employerDAO"/>
        <property name="officeDAO" ref="officeDAO"/>
    </bean>

    <bean name="/customer/employee/save" class="com.mariya.action.SaveEmployeeAction">
        <property name="employerDAO" ref="employerDAO"/>
        <property name="officeDAO" ref="officeDAO"/>
    </bean>

    <bean name="/customer/employee/delete" class="com.mariya.action.DeleteEmployeeAction">
        <property name="employerDAO" ref="employerDAO"/>
    </bean>

    <bean name="/office" class="com.mariya.action.OfficeAction">
        <property name="employerDAO" ref="employerDAO"/>
        <property name="officeDAO" ref="officeDAO"/>
    </bean>

    <bean name="/order" class="com.mariya.action.OrderAction">
        <property name="employerDAO" ref="employerDAO"/>
        <property name="customerDAO" ref="customerDAO"/>
        <property name="productDAO" ref="productDAO"/>
        <property name="orderDAO" ref="orderDAO"/>
    </bean>

    <bean name="/customer/order" class="com.mariya.action.OrderAction">
        <property name="employerDAO" ref="employerDAO"/>
        <property name="customerDAO" ref="customerDAO"/>
        <property name="productDAO" ref="productDAO"/>
        <property name="orderDAO" ref="orderDAO"/>
    </bean>

    <bean name="/statistic" class="com.mariya.action.StatisticAction">
        <property name="statisticDAO" ref="statisticDAO"/>
    </bean>

    <bean name="/manager/user" class="com.mariya.action.UserAction">
        <property name="userDao" ref="userDAO"/>
    </bean>

    <bean name="/welcome" class="com.mariya.action.WelcomeAction">
        <property name="productDAO" ref="productDAO"/>
        <property name="customerDAO" ref="customerDAO"/>
    </bean>

    <import resource="applicationContext.xml"/>
</beans>